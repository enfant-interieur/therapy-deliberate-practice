{
  "name": "@deliberate/worker",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler build",
    "deploy": "wrangler deploy",
    "migrate:local": "wrangler d1 migrations apply DB --local",
    "migrate:remote": "wrangler d1 migrations apply DB --remote",
    "db:seed": "wrangler d1 execute DB --file=../api/infra/seed.sql --local && wrangler d1 execute DB --file=../api/infra/seed.sql --remote",
    "deploy:ci": "npm run migrate:remote && wrangler deploy"
  },
  "devDependencies": {
    "wrangler": "^4.54.0"
  }
}
