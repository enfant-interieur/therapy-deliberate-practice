{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Local Runtime Suite",
  "version": "0.1.0",
  "identifier": "com.therapy.localruntime",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "capabilities": ["default"],
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' http://127.0.0.1:* http://localhost:*"
    },
    "windows": [
      {
        "label": "main",
        "title": "Local Runtime Suite",
        "width": 1100,
        "height": 720
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "category": "Utility",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "resources": {
      "resources/local_runtime/": "../../python/"
    },
    "macOS": {
      "signingIdentity": "Apple Distribution: YOUR TEAM (TEAMID)"
    }
  },
  "plugins": {
    "opener": {}
  }
}
